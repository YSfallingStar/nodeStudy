        <section class="login-form">
            <h1>훈련통제 로그인</h1>
            <form action="">
                <div class="int-area">
                    <span id="control-id" class="control-id">
                        <i class="fa-regular fa-user"></i>
                    </span>
                    <input
                        type="text"
                        id="id"
                        name="id"
                        class="id"
                        placeholder="Username"
                        autocomplete="off">
                </div>
                <div class="int-area">
                    <span id="control-id" class="control-id">
                        <i class="fa-solid fa-key"></i>
                    </span>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="USER PASSWORD"
                        autocomplete="off">
                </div><br>
                <div class="btn-area">
                    <button id="control-btn" type="submit">LOGIN</button>
                </div>
            </form>
        </section>
